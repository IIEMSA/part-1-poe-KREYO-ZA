@model EventEaseWebApp.Models.Venue

@{
    // Set the page title shown in the browser/tab
    ViewData["Title"] = "Delete";
}

<!-- Page Header -->
<h1>Delete</h1>

<!-- Confirmation Prompt -->
<h3>Are you sure you want to delete this?</h3>

<div>
    <!-- Section Label -->
    <h4>Venue</h4>
    <hr />

    <!-- Display Venue Details using a Description List (dl) -->
    <dl class="row">
        <!-- VenueName label -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <!-- VenueName value -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>

        <!-- Location label -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <!-- Location value -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>

        <!-- Capacity label -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <!-- Capacity value -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>

        <!-- Image URL label -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <!-- Image URL value -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
    </dl>

    <!-- Delete Form -->
    <form asp-action="Delete">
        <!-- Hidden field to pass the VenueId to the POST method -->
        <input type="hidden" asp-for="VenueId" />

        <!-- Delete button (submits the form to actually delete the venue) -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <!-- Back to List button -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
