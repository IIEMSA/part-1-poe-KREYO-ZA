@model EventEaseWebApp.Models.Booking

<!-- Metadata -->
@{
    ViewData["Title"] = "Delete";
}

<!-- Headings -->
<h1>Delete</h1>
<h4>Are you sure you want to delete this Booking?</h4>

<hr />

<!-- Booking Information -->
<div>
    <dl class="row">
        <!-- Event Id -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.EventId)
        </dd>

        <!-- Venue Id  -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueId)
        </dd>

        <!-- Booking Date -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
    </dl>
    
    <!-- Buttons -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />

        <!-- Delete Button -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <!-- Back Button -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
